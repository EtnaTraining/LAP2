<Alloy>
	<Window title="Cloud Login">

		<LeftNavButton platform="ios">
			<Button id="cancel" title="Offline" onClick="close"/>
		</LeftNavButton>
		<Menu id="menu" platform="android">
				<MenuItem id="cancel" title="Offline" onClick="close" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS"/>
		</Menu>
		<View id='wrapper'>
				<ImageView image="/images/login.png" id='img'/>
				<TextField id='username' hintText='username'/>
				<TextField id='password' hintText='password'/>
				<Button id='usercreate' onClick="usercreate" />
				<Button id='loginBtn' onClick="login"/>
		</View>
		<Widget src="nl.fokkezb.loading" name="view" id="loading" />
	</Window>
</Alloy>
