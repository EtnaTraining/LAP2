<Alloy>
	<Model src="todo"/>
	<Window class="container" title="Nuova Todo">
		<LeftNavButton platform="ios">
			<Button id="login" title="Login" onClick="login"/>
		</LeftNavButton>
		<Menu id="menu" platform="android">
				<MenuItem id="login" title="Login" onClick="login"/>
		</Menu>
		<ScrollView id="sv" layout="vertical">
		<View>
			<Label on>Titolo</Label>
			<TextField id="titleTxt" hintText="cosa vuoi fare" value="{todo.title}"></TextField>
		</View>
		<View>
			<Label>Dove</Label>
			<TextField id="locationTxt" hintText="dove" value="{todo.location}"></TextField>
			<ImageView id="gpsImg" image="/images/gps.png" onClick="showMap"></ImageView>
		</View>
		<View>
			<Label>Allarme</Label>
			<Switch id="alarmSwt" value="false" value="{todo.alarm}"/>
		</View>
		<View>
			<Label>Scadenza</Label>
			<Button id="scegliScadenzaBtn" onClick="scegliScadenza" title="{todo.duedateFormatted}"></Button>
		</View>
		<View id="footer">
			<ImageView id="thumb"
				image="{todo.thumb}"

				onClick="chooseImage"></ImageView>
			<Button id="editBtn" onClick="addTodo">Aggiungi</Button>
		</View>
	</ScrollView>
	</Window>
</Alloy>
